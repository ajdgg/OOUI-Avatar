{
	"name": "OOUI-Avatar",
	"author": [
		"Gary Guo",
		"[https://github.com/ajdgg awajie]"
	],
	"url": "https://github.com/ajdgg/OOJS-MW-Avatar",
	"descriptionmsg": "avatar_desc",
	"version": "0.2.1",
	"license-name": "BSD-2-Clause",
	"type": "specialpage",
	"ExtensionMessagesFiles": {
		"AvatarAlias": "Avatar.alias.php"
	},
	"MessagesDirs": {
		"Avatar": [
			"i18n"
		]
	},
	"Hooks": {
		"GetPreferences": "Avatar\\Hooks::onGetPreferences",
		"BaseTemplateToolbox": "Avatar\\Hooks::onBaseTemplateToolbox",
		"SidebarBeforeOutput": "Avatar\\Hooks::onSidebarBeforeOutput",
		"ParserFirstCallInit": "Avatar\\AvatarHooks::onParserFirstCallInit",
		"BeforePageDisplay": "Avatar\\Hooks::onBeforePageDisplay"
	},
	"ExtensionFunctions": [
		"Avatar\\Hooks::onSetup"
	],
	"ResourceModules": {
		"ext.avatar.upload": {
			"dependencies": [
				"ext.avatar.canvas"
			],
			"scripts":[
				"assets/upload.js"
			],
			"styles":[
				"assets/upload.css"
			],
			"messages": [
				"avatar-invalid",
				"avatar-toosmall",
				"uploadavatar-nofile",
				"uploadavatar-hint"
			]
		},
		"ext.avatar.uploadapp": {
			"class": "MediaWiki\\ResourceLoader\\CodexModule",
			"codexComponents": [
				"CdxButton",
				"CdxIcon",
				"CdxMessage"
			],
			"packageFiles":[
				"assets/SpecialUploadInit.js",
				"components/SpecialUpload.vue",
				{
					"name": "components/icons.json",
					"callback": "MediaWiki\\ResourceLoader\\CodexModule::getIcons",
					"callbackParam": [
						"cdxIconUpload"
					]
				}
			],
			"messages": [
				"uploadavatar-notice",
				"uploadavatar-nofile",
				"action-avatarupload",
				"preview-avatar",
				"reselect-the-avatar",
				"cancel-avatarupload"
			],
			"dependencies": [
				"vue",
				"ext.avatar.upload"
			]
		},
		"ext.avatar.view": {
			"scripts": [
				"assets/view.js"
			],
			"styles": [
				"assets/view.css"
			],
			"messages": [
				"viewavatar-nouser",
				"viewavatar-noavatar",
				"viewavatar-avatar-preview-tips"
			]
		},
		"ext.avatar.viewapp": {
			"class": "MediaWiki\\ResourceLoader\\CodexModule",
			"codexComponents": [
				"CdxButton",
				"CdxSearchInput",
				"CdxMessage",
				"CdxDialog",
				"CdxTextInput",
				"CdxField"
			],
			"packageFiles":[
				"assets/SpecialViewInit.js",
				"components/SpecialView.vue"
			],
			"dependencies": [
				"vue",
				"ext.avatar.view"
			],
			"messages": [
				"viewavatar-username",
				"viewavatar-delete-submit",
				"viewavatar-delete-legend",
				"viewavatar-delete-reason",
				"cancel-avatarupload",
				"viewavatar-delete-submit"
			]
		},
		"ext.avatar.UserLinkAvatar": {
			"scripts": [
				"example/Gadget-UserLinkAvatar.js"
			],
			"styles": [
				"example/Gadget-UserLinkAvatar.css"
			]
		},
		"ext.avatar.ShowAvatar": {
			"dependencies": [
				"mediawiki.user"
			],
			"scripts": [
				"example/Gadget-ShowAvatar.js"
			],
			"styles": [
				"example/Gadget-ShowAvatar.css"
			]
		},
		"ext.avatar.UserPageTitleAvatar": {
			"dependencies": [
				"mediawiki.user"
			],
			"scripts": [
				"example/Gadget-UserPageTitleAvatar.js"
			],
			"styles": [
				"example/Gadget-UserPageTitleAvatar.css"
			]
		},
		"ext.avatar.canvas": {
            "scripts": ["assets/canvas.js"]
        }
	},
	"AutoloadClasses": {
		"Avatar\\Hooks": "Hooks.php",
		"Avatar\\Avatars": "Avatar_body.php",
		"Avatar\\Thumbnail": "Thumbnail.php",
		"Avatar\\SpecialUpload": "SpecialUpload.php",
		"Avatar\\SpecialView": "SpecialView.php",
		"Avatar\\UploadLogFormatter": "includes/UploadLogFormatter.php",
		"Avatar\\AvatarHooks": "includes/Hooks/AvatarHooks.php"
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "Avatar"
	},
	"SpecialPages": {
		"UploadAvatar": "Avatar\\SpecialUpload",
		"ViewAvatar": "Avatar\\SpecialView"
	},
	"AvailableRights": [
		"avatarupload",
		"avataradmin"
	],
	"GroupPermissions": {
		"user": {
			"avatarupload": true
		},
		"sysop": {
			"avataradmin": true
		}
	},
	"LogTypes": [
		"avatar"
	],
	"LogActionsHandlers": {
		"avatar/upload": "Avatar\\UploadLogFormatter",
		"avatar/delete": "LogFormatter"
	},
	"config": {
		"DefaultAvatar": "http://www.gravatar.com/avatar/00000000000000000000000000000000?d=mm&f=y",
		"MaxAvatarResolution": 256,
		"AllowedAvatarRes": [64, 128], 
		"DefaultAvatarRes": 128,
		"UseAvatar": true,
		"VersionAvatar": false,
		"AvatarServingMethod": "redirect",
		"AvatarLogInRC": true,
		"AvatarUploadPath": false,
		"AvatarUploadDirectory": false,
		"MenuOption": false,
		"UserLinkAvatar": false,
		"ShowAvatar": false,
		"UserPageTitleAvatar": false
	},
	"manifest_version": 1
}
